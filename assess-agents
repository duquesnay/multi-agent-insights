#!/bin/bash
# Agent Retrospective - Multi-Agent System Assessment
#
# Launches Claude Code with /assess-agents command for comprehensive
# analysis following VACE methodology (Validate-Analyze-Cross-check-Evolve)

set -e

PROJECT="${1:-all}"

cat << 'EOF'
╔════════════════════════════════════════════════════════════╗
║       Agent Retrospective - Multi-Agent Assessment         ║
╚════════════════════════════════════════════════════════════╝
EOF

echo ""
echo "Project: $PROJECT"
echo "Method:  VACE Framework (Validate-Analyze-Cross-check-Evolve)"
echo ""

# Check if Claude Code is available
if ! command -v claude &> /dev/null; then
    echo "❌ Claude Code CLI not found"
    echo ""
    echo "Install Claude Code:"
    echo "  https://docs.claude.com/en/docs/claude-code"
    echo ""
    exit 1
fi

# Launch Claude Code with /assess-agents
echo "Launching Claude Code..."
claude "/assess-agents $PROJECT"
